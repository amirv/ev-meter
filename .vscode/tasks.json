{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "poetry",
      "args": ["install"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "poetry",
      "args": ["run", "pytest"],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Lint (Ruff)",
      "type": "shell",
      "command": "poetry",
      "args": ["run", "ruff", "check", "."],
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Format (Black)",
      "type": "shell",
      "command": "poetry",
      "args": ["run", "black", "."],
      "problemMatcher": [],
      "group": "test"
    }
  ]
}
